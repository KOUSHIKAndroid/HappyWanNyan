<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LL_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <com.happywannyan.Font.SFNFTextView
            android:id="@+id/TXT_User_Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_sender_background"
            android:elevation="3dp"
            android:maxEms="16"
            android:text="sdjhbcshdjcb dhjsbcjhkbjhsdbchbssd kdscjkdk kjsdcjk sdkjsdckjds
sdjhbcdhsjbc hjsdc jksdckj dsjcb bds
dschjbsdhb"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/IMG_User_Attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="00dp"
            android:layout_marginTop="0dp"
            android:background="#A2DDFF"
            android:padding="1px" />

        <ImageView
            android:id="@+id/IMG_User_MAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="00dp"
            android:layout_marginTop="0dp"
            android:background="#A2DDFF"
            android:padding="1px" />
    </LinearLayout>

    <com.happywannyan.Font.SFNFTextView
        android:id="@+id/TXT_User_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/LL_msg"
        android:text="14:29AM"
        android:textSize="12sp" />

</RelativeLayout>
