<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Card_AddRevw"
        card_view:cardCornerRadius="23dp"
        card_view:cardElevation="5dp"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="#0B6C8C"
        xmlns:android="http://schemas.android.com/apk/res/android">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >



            <com.happywannyan.Font.SFNFBoldTextView
                android:id="@+id/TXT_ButtonName"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="14sp"
                android:textColor="@color/colorwhite"/>
            <ImageView
                android:layout_toRightOf="@+id/TXT_ButtonName"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_chevron_right_white"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

