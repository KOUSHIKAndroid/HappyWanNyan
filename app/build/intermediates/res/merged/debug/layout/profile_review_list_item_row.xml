<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/colorGrayProject"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/IMG_Profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#434343" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.happywannyan.Font.SFNFBoldTextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="USERNAME"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/Rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5" />

            </LinearLayout>

            <com.happywannyan.Font.SFNFTextView
                android:id="@+id/Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="06/06/1024"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

    <com.happywannyan.Font.SFNFTextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="skjdnfskdfjnlksnfksnfkdnskfdnksndfksdflnsdfjnsdfkjnslkdfnlksndfkljnskdfnslkdfnklsdjfnksndfknskdlfnksdfnksndfksjndfklnsdf"
        android:textColor="@color/colorTextDarkGray"
        android:textSize="14sp" />
</LinearLayout>